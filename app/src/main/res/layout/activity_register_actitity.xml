<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:padding="20dp"
    android:background="@color/white"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActitity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="start"

            android:background="@color/white"
            android:contentDescription="Comeback"
            android:src="@drawable/icon_back" />
        <ImageView
            android:layout_marginTop="50dp"
            android:id="@+id/logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/logo_1"
            android:contentDescription="@string/app_name" />
        <TextView
            android:id="@+id/userTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:textStyle="bold"
            android:textSize="24sp"/>

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backgroup_search"
            android:hint="Nhập tên của bạn"
            android:padding="10dp"
            android:textSize="20sp"
            android:inputType="textEmailAddress"/>
        <TextView
            android:id="@+id/mailTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Email:"
            android:textSize="24sp"/>
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập email hoặc số điện thoại"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:background="@drawable/backgroup_search"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/passTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Password:"
            android:textSize="24sp"/>
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập mật khẩu"
            android:inputType="textPassword"
            android:padding="10dp"
            android:background="@drawable/backgroup_search"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/passconformTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Password Confirm:"
            android:textSize="24sp"/>
        <EditText
            android:id="@+id/passwordConform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập lại mật khẩu"
            android:inputType="textPassword"
            android:padding="10dp"
            android:background="@drawable/backgroup_search"
            android:textSize="20sp"/>


        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="10dp"
            android:id="@+id/signinBtn"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/button_rounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Signin"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/backLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trở về đăng nhập"

            android:textSize="16sp"
            android:textColor="@color/lightBlue"
            android:gravity="center"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>